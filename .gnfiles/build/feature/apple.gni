xcode_target_sdk = ""
xcode_target_platform = ""

assert(is_mac)

if (is_mac) {
  if (target_cpu == "x64") {
    xcode_target_sdk = "macosx"
    # 10.9 is too old for modern libc++ (e.g. symbols like std::__1::__hash_memory).
    # Align with arm64 minimum deployment target to avoid linking against old SDK stubs.
    xcode_target_platform = "x86_64-apple-macosx11"
  } else if (target_cpu == "arm64") {
    xcode_target_sdk = "macosx"
    xcode_target_platform = "arm64-apple-macosx11"
  } else {
    assert(false, "Not support")
  }
}
